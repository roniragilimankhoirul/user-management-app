        }
      }
    },
    "/api/bank-accounts": {
      "get": {
        "tags": ["bank-account"],
        "summary": "get all user bank-account",
        "description": "This API endpoint allows clients to retrieve user bank account from system",
        "parameters": [
          {
            "$ref": "#/components/parameters/Authorization"
          }
        ],
        "responses": {
          "200": {
            "description": "Success get user bank account",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "nama_bank": {
                        "type": "string",
                        "enum": ["BCA", "BNI", "BRI", "MANDIRI"]
                      },
                      "no_rekening": { "type": "string" },
                      "saldo": {
                        "type": "number"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/bankAccountNotFoundResponse"
          },
          "401": {
            "$ref": "#/components/responses/NotAuthorizedResponse"
          }
        }
      },
      "post": {
        "tags": ["bank-account"],
        "summary": "create new user bank-account",
        "description": "This API endpoint allows clients to create new bank-account to the system",
        "parameters": [
          {
            "$ref": "#/components/parameters/Authorization"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nama_bank": {
                    "type": "string",
                    "enum": ["BCA", "BNI", "BRI", "MANDIRI"]
                  },
                  "no_rekening": { "type": "string" },
                  "saldo": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success create user new bank account",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "bank-account created successfully"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/NotAuthorizedResponse"
          }
        }
      }
    },
    "/api/bank-accounts/{bank-acccountID}": {
      "put": {
        "tags": ["bank-account"],
        "summary": "update user bank-account",
        "description": "This API endpoint allows clients to update bank-account from the system",
        "parameters": [
          {
            "$ref": "#/components/parameters/Authorization"
          },
          {
            "$ref": "#/components/parameters/bank-accountID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "saldo": {
                    "type": "number"
                  }
                },
                "required": ["saldo"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success update bank-account",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "bank-account updated successfully"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/NotAuthorizedResponse"
          },
          "404": {
            "$ref": "#/components/responses/bankAccountNotFoundResponse"
          }
        }
      },
      "delete": {
        "tags": ["bank-account"],
        "summary": "delete user bank account",
        "description": "This API endpoint allows clients to delete user back-account from the system",
        "parameters": [
          {
            "$ref": "#/components/parameters/Authorization"
          },
          {
            "$ref": "#/components/parameters/bank-accountID"
          }
        ],
        "responses": {
          "200": {
            "description": "Success delete user back account",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "back account deleted successfully"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/NotAuthorizedResponse"
          },
          "404": {
            "$ref": "#/components/responses/bankAccountNotFoundResponse"
          }
        }
      }
    }
  },
  "components": {
    "parameters": {
      "Authorization": {
        "name": "Authorization",
        "in": "header",
        "description": "JWT token for authentication",
        "required": true,
        "schema": {
          "type": "string"
        }
      },
      "userID": {
        "name": "userID",
        "in": "path",
        "description": "user ID for path parameters",
        "required": true,
        "schema": {
          "type": "string"
        }
      },
      "addressID": {
        "name": "addressID",
        "in": "path",
        "description": "alamat ID for path parameters",
        "required": true,
        "schema": {
          "type": "string"
        }
      },
      "bank-accountID": {
        "name": "bank-accountID",
        "in": "path",
        "description": "bank-accountID for path parameters",
        "required": true,
        "schema": {
          "type": "string"
        }
      }
    },
    "responses": {
      "NotFoundResponse": {
        "description": "Failed to find the requested resource",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "User Not found"
                }
              }
            }
          }
        }
      },
      "AddressNotFoundResponse": {
        "description": "Failed to get Alamat",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Alamat not found"
                }
              }
            }
          }
        }
      },
      "bankAccountNotFoundResponse": {
        "description": "Failed to get bank-account",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "bank account not found"
                }
              }
            }
          }
        }
      },
      "NotAuthorizedResponse": {
        "description": "Unauthorized: The request lacks valid authentication credentials",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Not authorized"
                }
              }
            }
          }
        }
      }
    }
  }
}
